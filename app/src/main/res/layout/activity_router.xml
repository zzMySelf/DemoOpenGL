<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RouterActivity">

    <Button
        android:id="@+id/mediaRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转MediaRecorder视频录制" />

    <Button
        android:id="@+id/camera2Recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转Mediacodec+Camera2视频录制" />

    <Button
        android:id="@+id/opengl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转opengl" />

    <Button
        android:id="@+id/window_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加window dialog" />

    <com.baidu.demoopengl.CustomProgressView
        android:id="@+id/customProgressView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

</LinearLayout>